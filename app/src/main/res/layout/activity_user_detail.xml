<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey900"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivBackDetail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_twotone_keyboard_backspace"
            android:layout_marginStart="@dimen/margin_medium_2"
             android:layout_marginTop="@dimen/margin_medium_2"/>

        <TextView
            android:id="@+id/tvNameDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_large"
            android:text="Hsu Myat Ye Htet"
            android:textColor="@color/white"
            android:textSize="@dimen/text_heading_1x"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUserNameDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="hsumyatyehtet"
            android:textColor="@color/white"
            android:textSize="@dimen/text_regular_2x"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_user_detail"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_xxlarge">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvEmailDetail"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginVertical="@dimen/margin_medium_2"
                    android:layout_marginStart="@dimen/margin_medium_2"
                    app:cardBackgroundColor="@color/colorGrey700"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="@dimen/margin_xxlarge">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_twotone_email" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_medium_2"
                    android:layout_toEndOf="@+id/cvEmailDetail"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/colorGrey300"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/tvEmailDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="hsumyatyehtet@gmail.com"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_regular"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvAddressDetail"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginVertical="@dimen/margin_medium_2"
                    android:layout_marginStart="@dimen/margin_medium_2"
                    app:cardBackgroundColor="@color/colorGrey700"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="@dimen/margin_xxlarge">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_map" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_medium_2"
                    android:layout_toEndOf="@+id/cvAddressDetail"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textColor="@color/colorGrey300"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/tvAddressDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="No.1, Main Road, Yangon"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_regular"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvPhoneDetail"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginVertical="@dimen/margin_medium_2"
                    android:layout_marginStart="@dimen/margin_medium_2"
                    app:cardBackgroundColor="@color/colorGrey700"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="@dimen/margin_xxlarge">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_twotone_phone_android" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_medium_2"
                    android:layout_toEndOf="@+id/cvPhoneDetail"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:textColor="@color/colorGrey300"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/tvPhoneDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="09254726191"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_regular"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvWebsiteDetail"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginVertical="@dimen/margin_medium_2"
                    android:layout_marginStart="@dimen/margin_medium_2"
                    app:cardBackgroundColor="@color/colorGrey700"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="@dimen/margin_xxlarge">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_web" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_medium_2"
                    android:layout_toEndOf="@+id/cvWebsiteDetail"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Website"
                        android:textColor="@color/colorGrey300"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/tvWebsiteDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="www.hmyh.com"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_regular"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>